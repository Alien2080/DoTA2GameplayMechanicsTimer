<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hero_picker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android_app.alien.dota2gameplaymechanicstimer.HeroPickerActivity"
    android:background="@color/colorAccent">

    <Button
        android:id="@+id/back_button"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:onClick="returnToMain"
        android:text="Back"
        android:textSize="20dp"
        android:background="@drawable/round_shape_button"
        />
    <TextView
        android:id="@+id/selected_hero1_hero_select_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/back_button"
        android:layout_alignParentRight="true"
       android:gravity="right"
        android:textSize="20dp"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/selected_hero2_hero_select_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selected_hero1_hero_select_textview"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:textSize="20dp"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/selected_hero3_hero_select_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selected_hero2_hero_select_textview"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:textSize="20dp"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/selected_hero4_hero_select_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selected_hero3_hero_select_textview"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:textSize="20dp"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/selected_hero5_hero_select_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selected_hero4_hero_select_textview"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:textSize="20dp"
        android:layout_margin="5dp"/>


    <ListView
        android:id="@+id/hero_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    </ListView>

</RelativeLayout>
